		"express": "^4.17.1",
		"helmet": "^3.21.2",
		"joi": "^14.3.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.8.9",
		"mongoose-unique-validator": "^2.0.3",
		"morgan": "^1.9.1",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"validator": "^12.2.0"
	},
	"devDependencies": {
		"eslint": "^6.5.1",
		"eslint-config-airbnb-base": "^14.0.0",
		"eslint-config-prettier": "^6.4.0",
